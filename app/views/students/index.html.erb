<p id="notice"><%= notice %></p>

<h1>Listing Students</h1>
<div class="input-group">
  <input type="text" class="form-control input-lg" placeholder="Search Student">
  <span class="input-group-btn">
    <button class="btn btn-cust btn-lg" type="button"><i class="fa fa-search"></i> Search</button>
  </span>
</div>
<div class="student-index">
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Profile Photo</th>
          <th>Name</th>
          <th>Admission number</th>
          <th>Contact</th>
          <th colspan="3">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @students.each do |student| %>
          <tr>
            <td><%= image_tag student.profile_pic, class: "img-responsive profile-picture" %></td>
            <td><%= student.name %></td>
            <td><%= student.admission_number %></td>
            <td><%= student.contact %></td>
            <td><%= link_to 'Show', student, class: "btn btn-info" %></td>
            <td><%= link_to 'Edit', edit_student_path(student), class: "btn btn-cust" %></td>
            <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

