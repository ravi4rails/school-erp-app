<%= form_for(@student) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% @student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-area">
    <div class="row">
      <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "input-lg form-control" %>
      </div>
      <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12">
        <%= f.label :middle_name %>
        <%= f.text_field :middle_name, class: "input-lg form-control" %>
      </div>
      <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "input-lg form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12">
        <%= f.label :date_of_birth %>
        <%= f.text_field :date_of_birth, class: "input-lg form-control datepicker" %>
      </div>
      <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12">
        <%= f.label :admission_date %>
        <%= f.text_field :admission_date, class: "input-lg form-control datepicker" %>
      </div>
      <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12">
        <%= f.label :admission_number %>
        <%= f.text_field :admission_number, class: "input-lg form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12">
        <%= f.label :category %>
        <%= f.text_field :category, class: "input-lg form-control" %>
      </div>
      <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12">
        <%= f.label :cast %>
        <%= f.text_field :cast, class: "input-lg form-control" %>
      </div>
      <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12">
        <%= f.label :relegion %>
        <%= f.text_field :relegion, class: "input-lg form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12">
        <%= f.label :blood_group %>
        <%= f.text_field :blood_group, class: "input-lg form-control" %>
      </div>
      <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12">
        <%= f.label :address %>
        <%= f.text_field :address, class: "input-lg form-control" %>
      </div>
      <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12">
        <%= f.label :contact %>
        <%= f.text_field :contact, class: "input-lg form-control" %>
      </div>
    </div>
  </div>
  <div class="field">
    <%= f.label :profile_pic %><br>
    <%= f.file_field :profile_pic %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-lg btn-cust" %>
  </div>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
  });
</script>
